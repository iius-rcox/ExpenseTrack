{
  "ConnectionStrings": {
    "PostgreSQL": "Host=${POSTGRES_HOST};Port=5432;Database=expenseflow;Username=${POSTGRES_USER};Password=${POSTGRES_PASSWORD};SSL Mode=Require"
  },
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "TenantId": "953922e6-5370-4a01-a3d5-773a30df726b",
    "ClientId": "00435dee-8aff-429b-bab6-762973c091c4",
    "Audience": "api://00435dee-8aff-429b-bab6-762973c091c4"
  },
  "AzureOpenAI": {
    "Endpoint": "https://iius-embedding.openai.azure.com/",
    "EmbeddingDeployment": "text-embedding-3-small",
    "ChatDeployment": "gpt-4o-mini"
  },
  "Categorization": {
    "EmbeddingSimilarityThreshold": 0.92,
    "VendorAliasConfirmThreshold": 3,
    "EmbeddingRetentionMonths": 6,
    "MaxDescriptionLength": 500
  },
  "Hangfire": {
    "DashboardPath": "/hangfire",
    "WorkerCount": 4
  },
  "DocumentIntelligence": {
    "Endpoint": "https://iius-doc-intelligence.cognitiveservices.azure.com/"
  },
  "BlobStorage": {
    "ReceiptsContainer": "receipts",
    "ThumbnailsContainer": "thumbnails"
  },
  "ReceiptProcessing": {
    "MaxFileSizeMB": 25,
    "MaxBatchSize": 20,
    "ConfidenceThreshold": 0.60,
    "MaxRetries": 3,
    "AllowedContentTypes": [
      "image/jpeg",
      "image/png",
      "image/heic",
      "image/heif",
      "application/pdf"
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Hangfire": "Information"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": ["https://staging.expense.ii-us.com"]
  },
  "Export": {
    "TemplateBlobContainer": "templates",
    "TemplateFileName": "expense-report-template.xlsx",
    "MaxReceiptsPerPdf": 100,
    "DateFormat": "MM/dd/yy"
  },
  "Analytics": {
    "Tier1HitRateTarget": 50.0,
    "Tier2CostPerOperation": 0.00002,
    "Tier3CostPerOperation": 0.0003
  }
